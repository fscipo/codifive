<h2>Cambiar categoria</h2>
<div class="row">
	<div class="col-md-4">
	<%= form_for @cate do |c| %>
	<div class="form-group">
	<%= c.label :nombre %>
	<%= c.text_field :nombre, required: true, class:"form-control" %>
     </div>
	<%= c.submit 'Guardar categoria', class:"btn btn-success" %>
<%end%>	
</div>
</div>
