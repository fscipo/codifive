<h2> Listado de Categorias </h2>

<%= link_to "Nueva Categoria", new_category_path, class: 'btn btn-primary' %>


<table class="table table-striped">
<tr>
<th>Nombre</th>
<th>Acciones</th>
</tr>

<% @cate.each do |c| %>
<tr>
	<td> <%= c.nombre %> </td>
	<td><%= link_to 'Eliminar', category_path(c), method: :delete, data: {confirm: 'Estas seguro que quieres eliminar esta categoria'}, class: 'btn btn-danger' %>
		<%= link_to 'Editar', edit_category_path(c), class: 'btn btn-primary' %> </td>
</tr>
<% end %>

</table>