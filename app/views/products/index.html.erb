<h2> Listado de Productos </h2>


<table class="table table-striped">
<tr>
<th>Nombre</th>
<th>Categoria</th>
<th>Descripcion</th>
<th>Foto</th>
<th>Acciones</th>
</tr>

<% @prod.each do |p| %>
<tr>
	<td> <%= p.nombre %> </td>
	<td> <%= p.category_id %> </td>
	<td> <%= p.descripcion %> </td>
	<td> <%= image_tag(p.foto , width: '75')%> </td>
	<td><%= link_to 'Eliminar', product_path(p), method: :delete, data: {confirm: 'Estas seguro que quieres eliminar este producto'}, class: 'btn btn-danger' %>
		<%= link_to 'Editar', edit_product_path(p), class: 'btn btn-primary' %> </td>
</tr>
<% end %>

</table>