<div class="container-fluid">

<h1>Listado de productos</h1>


<table class="table table-hover">
<tr>
	<th>Nombre</th>
	<th>Categor√≠a</th>
	<th>Descripcion</th>
	<th>Fotos</th>
	<th>Fecha de vencimiento</th>
	<th>Acciones</th>
</tr>
<% @prod.each do |p| %>
	<tr>
	<td> <%= p.nombre %> </td>
	<td> <%= p.category.nombre %> </td>
	<td> <%= p.descripcion %> </td>
	<td> <%= image_tag(p.foto , width: '75')%> </td>
	<td> <%= p.vencimiento %> </td>
	<td> <%= link_to 'Ver detalle', product_path(p), class: 'btn btn-primary' %> </td>
	</tr>
	<% end %>


</table>

</div>