<div class="container-fluid">
<h2> <%= @prod.nombre %> </h2>
<h4> <%= @prod.category.nombre %> </h4>
<div class="row">

	<div class="col-md-8"><%= @prod.descripcion %></div>

	<div class="col-md-4"><%= image_tag(@prod.foto, width: '250')%></div>

</div>

<button type="button" class="btn btn-success">Comprar</button>



<h4>Cree una oferta</h4>
<%= form_for @offer do |f| %>
  <p>
    <%= f.label :razon %><br>
    <%= f.text_area :razon %>
  </p>
  <p>
    <%= f.label :precio %><br>
    <%= f.number_field :precio %>
  </p>
  <p>
    <%= f.label :tarjeta %><br>
    <%= f.text_field :tarjeta %>
  </p>
  <p>
    <%= f.label :codigo %><br>
    <%= f.password_field :codigo %>
  </p>
  <%= f.hidden_field :product_id; @prod.id %>
  <%= f.hidden_field :client_id; current_user.id %>
  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>