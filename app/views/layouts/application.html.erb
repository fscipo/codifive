<!DOCTYPE html>
<html>
<head>
  <title>Bestnid</title>

  <%= stylesheet_link_tag    'application', media: 'all' %> 
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

</head>

<body id="body">
	<nav class="navbar navbar-default"  id="header">
  		<div class="container-fluid" > 
			<!-- Brand and toggle get grouped for better mobile display -->
		<div class="navbar-header" id="text1">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
		</button> 
       
      	<%= link_to root_path do %>
         <%= image_tag("avatar_Bestnid.png", width: '75') %>
       <% end %>

    	</div>
		<!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav"  id="text1">
             
        <li class="dropdown" id="text1">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" 
          role="button" aria-haspopup="true" aria-expanded="false" id="text1">
          Categorias <span class="caret">
          </span></a>
          <ul class="dropdown-menu"  id="text1">
            <li><a href="#">Category 1</a></li>
            <li><a href="#">Category 2</a></li>
            <li><a href="#">Category 3</a></li>
            <li><a href="#">Category 4</a></li>
            <li><a href="#">Category 5</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Separated link</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">One more separated link</a></li>
          </ul>
        </li>
      </ul>

      <%=form_tag(products_path,class:"navbar-form navbar-left",method:'get') do %>
      	<%= text_field_tag :search,params[:search], placeholder: "Ingrese aquí lo que desea buscar del producto", size:"60px", class:"form-control" %>
      
      <%= submit_tag 'Buscar',class:"btn btn-danger" %>
	 <%end%>

      <ul class="nav navbar-nav navbar-right" >
        <% if current_user %>
    Hola <%= current_user.nombre %> <%= link_to 'Cerrar Sesión', destroy_user_session_path, method: :delete, class:"btn btn-danger" %>
     <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav"  id="text3">
             
        <li class="dropdown" id="text3">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" 
          role="button" aria-haspopup="true" aria-expanded="false" id="text3">
          Opciones <span class="caret">
          </span></a>
          <ul class="dropdown-menu"  id="text3">
            <li><%= link_to 'Editar cuenta', edit_user_registration_path%></li>
            <li><%= link_to "Eliminar cuenta", registration_path('user'), data: { confirm: "¿Estas seguro de que quiere eliminar su cuenta de Bestnid?" }, method: :delete %></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to 'Publicar producto', new_product_path %></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to 'Administrar categorias', categories_path %></li>
          </ul>
        </li>
      </ul>
<% else %>
    <%= link_to 'Iniciar Sesión', new_user_session_path, class:"btn btn-success" %>
    <%= link_to 'Crear Cuenta', new_user_registration_path, class:"btn btn-primary"%>
<% end %>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %> alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <%= value %>
    </div>

<% end %>



  <%= yield %> 

</body>

